{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Major Earthquakes 1965 - 2016",
  "data": {
    "url": "https://raw.githubusercontent.com/ronniebarker23/FIT3179/main/Assignment2/data/earthquakes2.csv"
  },
  "params": [
 {
 "name": "Date_To",
 "value": 2016,
 "bind": {
  "input": "range",
  "min": 1965,
  "max": 2016,
  "step": 1,
  "name": "Earthquakes up to year"
  }
 }
 ],"transform": [
   {"filter": "datum.Year <= Date_To"}
 ],
  "encoding": {
    "x": {
      "field": "Magnitude",
      "type": "quantitative",
      "title": "Magnitude",
      "axis": {"tickCount": 10},
      "scale": {"domain": [5, 9]}
    },
    "y": {"field": "Depth", "type": "quantitative",
      "axis": {"tickCount": 14},
      "scale": {"domain": [0, 700]}}
    },
    "layer": [
    {
      "selection": {
    "type_highlight": {
    "type": "multi",
    "fields": ["Type"],
    "bind": "legend"
  }
  },
    "mark": "circle",
      "encoding": {
    "color": {"field": "Type", "type": "nominal",
    "scale": {
      "domain": ["Earthquake","Nuclear"
        ],
      "range": [
       "#377eb8",
        "#ff7f00"]}},
     "opacity": {
       "condition": {"selection": "type_highlight",    "value": 0.6},
      "value": 0.2
    },
    "size": {
      "field": "Horizontal_Distance",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "Type", "type": "nominal"},
      {"field": "Magnitude", "type": "quantitative", "format": ","},
      {"field": "Depth", "type": "quantitative", "format": ","},
      {"field": "Horizontal_Distance", "type": "quantitative", "format": ","},
      {"field": "Date", "type": "temporal", "format": "%m/%d/%Y"}
    ]}
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Year", "type": "quantitative"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Magnitude'] > '7.5' && datum['Depth'] > '400'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
      {"field": "Type", "type": "nominal"},
      {"field": "Magnitude", "type": "quantitative", "format": ","},
      {"field": "Depth", "type": "quantitative", "format": ","},
      {"field": "Horizontal_Distance", "type": "quantitative", "format": ","},
      {"field": "Date", "type": "temporal", "format": "%m/%d/%Y"}
    ]
      }
    }
 ]
   
  
