{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Major Earthquakes 1965 - 2016",
  "data": {
    "url": "https://raw.githubusercontent.com/ronniebarker23/FIT3179/main/Assigment2/data/earthquakes6.csv"
  },
  "params": [
    {
      "name": "Date_To",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 1965,
        "max": 2016,
        "step": 1,
        "name": "Earthquakes up to year"
      }
    }
  ],
  "transform": [{"filter": "datum.Year <= Date_To"}],
  "encoding": {
    "x": {
      "field": "Magnitude",
      "type": "quantitative",
      "title": "Magnitude",
      "axis": {"tickCount": 10,"grid": false},
      "scale": {"domain": [5, 9]}
    },
    "y": {
      "field": "Depth",
      "type": "quantitative",
      "axis": {"tickCount": 14,"grid":false},
      "scale": {"domain": [0, 700]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Americas",
              "Asia",
              "Europe",
              "Oceania",
              "Ocean"
            ],
            "range": [
              "#f0a313",
              "#ed72c4",
              "#e81c0e",
              "#64068c",
              "#dee64c",
              "#158eb0"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.9},
          "value": 0.1
        },
        "size": {
          "field": "Horizontal_Distance",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 10, 20, 30],
            "range": [20, 40, 80, 160, 320]
          }
        },
        "tooltip": [
          {"field": "Type", "type": "nominal"},
          {"field": "Magnitude", "type": "quantitative", "format": ","},
          {"field": "Depth", "type": "quantitative", "format": ","},
          {
            "field": "Horizontal_Distance",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Date", "type": "temporal", "format": "%m/%d/%Y"},
          {"field": "Continent", "type": "nominal"},
          {"field": "Country", "type": "nominal"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Year", "type": "quantitative"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Magnitude'] > '7.5' && datum['Depth'] > '400'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Type", "type": "nominal"},
          {"field": "Magnitude", "type": "quantitative", "format": ","},
          {"field": "Depth", "type": "quantitative", "format": ","},
          {
            "field": "Horizontal_Distance",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Date", "type": "temporal", "format": "%m/%d/%Y"},
          {"field": "Continent", "type": "nominal"},
          {"field": "Country", "type": "nominal"}
        ]
      }
    }
  ]
}
